# Database Configuration
# Choose storage provider: 'google-sheets', 'turso', or 'local-db'
STORAGE_PROVIDER=google-sheets

# For local development database (when STORAGE_PROVIDER=local-db)
LOCAL_DATABASE_URL=file:./local.db

# For production Turso database (when STORAGE_PROVIDER=turso)
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# Google Sheets Configuration (when STORAGE_PROVIDER=google-sheets)
GOOGLE_SHEETS_ID=
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=

# Google OAuth (for BetterAuth)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Other configurations
BETTER_AUTH_SECRET=
NEXT_PUBLIC_BASE_URL=